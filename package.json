{
  "name": "spike-platform",
  "version": "0.1.0",
  "private": true,
  "description": "Spike - Comprehensive academic management platform for Israeli university students",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,json,css,scss,html}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,json,css,scss,html}\"",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:unit": "turbo test:unit",
    "test:e2e": "turbo test:e2e",
    "test:visual": "turbo test:visual",
    "test:coverage": "turbo test:coverage",
    "test:hebrew": "vitest run --config vitest.config.ts -t 'Hebrew|RTL|עברית' --reporter=verbose",
    "test:auth": "vitest run tests/unit/middleware-authentication-logic.test.ts tests/unit/onboarding-api-logic.test.ts --config vitest.config.simple.ts --reporter=verbose",
    "test:auth-critical": "vitest run tests/unit/middleware-authentication-logic.test.ts tests/unit/onboarding-api-logic.test.ts --config vitest.config.simple.ts -t 'CRITICAL' --reporter=verbose",
    "test:auth-e2e": "playwright test tests/e2e/real-bgu-authentication.spec.ts --project='Desktop Chrome' --reporter=line",
    "test:auth-bug": "playwright test tests/e2e/real-bgu-authentication.spec.ts --grep='CRITICAL.*redirect.*dashboard' --reporter=verbose",
    "test:auth-flow": "npm run test:auth && npm run test:auth-e2e",
    "test:auth-all": "npm run test:auth && npm run test:auth-e2e && npm run test:hebrew",
    "test:middleware": "vitest run tests/unit/middleware-authentication-logic.test.ts --reporter=verbose",
    "test:onboarding": "vitest run tests/unit/onboarding-api-logic.test.ts --reporter=verbose",
    "test:real-bgu": "playwright test tests/e2e/real-bgu-authentication.spec.ts --headed --reporter=line",
    "lint:rtl": "eslint '**/*.{ts,tsx}' --rule '{\"no-restricted-syntax\": [\"error\", {\"selector\": \"CallExpression[callee.property.name=/^(marginLeft|marginRight|paddingLeft|paddingRight)$/]\", \"message\": \"Use logical properties (marginInlineStart/End, paddingInlineStart/End) instead of directional properties for RTL support.\"}]}'",
    "visual:rtl": "playwright test --config playwright.config.ts --project='Hebrew RTL Desktop' --reporter=html",
    "a11y:hebrew": "playwright test --config playwright.config.ts --project='Accessibility Test' --grep='Hebrew|RTL' --reporter=line",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "clean:deps": "rm -rf node_modules apps/*/node_modules packages/*/node_modules package-lock.json",
    "fresh-install": "npm run clean:deps && npm install",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "turbo db:migrate",
    "db:seed": "turbo db:seed",
    "db:studio": "turbo db:studio",
    "db:reset": "turbo db:reset",
    "scraper:dev": "cd apps/scraper && python main.py",
    "scraper:test": "cd spike-analyzer && python unified_moodle_scraper.py",
    "test-scrape": "node test-scraping.js",
    "test-scrape-ortaiz": "node test-scraping-ortaiz.js",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "pre-push": "npm run type-check && npm run test:unit",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run test",
    "validate:ci": "node scripts/validate-ci.js",
    "security:audit": "npm audit --audit-level=moderate",
    "deps:update": "npx npm-check-updates -u && npm install",
    "deps:check": "npx npm-check-updates",
    "build:analyze": "ANALYZE=true npm run build",
    "dev:debug": "NODE_OPTIONS='--inspect' npm run dev",
    "start:prod": "npm run build && npm start"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@turbo/gen": "^1.10.0",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^5.0.1",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-organize-imports": "^3.2.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "ts-node": "^10.9.2",
    "turbo": "^1.10.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-context-menu": "^2.2.15",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-hover-card": "^1.1.14",
    "@radix-ui/react-menubar": "^1.1.15",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-toggle-group": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@supabase/supabase-js": "^2.53.0",
    "@types/next-auth": "^3.13.0",
    "class-variance-authority": "^0.7.1",
    "cmdk": "^1.1.1",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^12.23.12",
    "input-otp": "^1.4.2",
    "node-fetch": "^2.7.0",
    "pg": "^8.16.3",
    "playwright": "^1.54.2",
    "react-day-picker": "^9.8.1",
    "react-resizable-panels": "^3.0.4",
    "recharts": "^3.1.0",
    "sonner": "^2.0.6",
    "vaul": "^1.1.2"
  }
}
