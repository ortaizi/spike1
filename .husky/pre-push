#!/usr/bin/env sh

# 🚀 Spike Academic Platform - Simple Pre-push  
echo "🚀 Running pre-push checks..."

# TypeScript validation
echo "🔧 Type checking..."
npm run type-check || exit 1

# Unit tests
echo "🧪 Running tests..."
npm run test:unit || exit 1

# Hebrew/RTL tests if they exist
if grep -q "test:hebrew" package.json; then
  echo "🌍 Running Hebrew tests..."
  npm run test:hebrew || exit 1
fi

echo "✅ Pre-push checks passed!"