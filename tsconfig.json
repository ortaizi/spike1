{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // ================================================================================================
    // üéØ TARGET & ENVIRONMENT
    // ================================================================================================
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022", "ES2023.Array"],
    "useDefineForClassFields": true,
    "allowJs": true,
    "checkJs": false,

    // ================================================================================================
    // üîí STRICT TYPE CHECKING (Enterprise Grade)
    // ================================================================================================
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "exactOptionalPropertyTypes": false,

    // ================================================================================================
    // üö® ADDITIONAL CHECKS (Prevent Runtime Errors)
    // ================================================================================================
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,

    // ================================================================================================
    // üßπ CODE QUALITY
    // ================================================================================================
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // ================================================================================================
    // üîß MODULE SYSTEM
    // ================================================================================================
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,

    // ================================================================================================
    // üèóÔ∏è BUILD & EMIT
    // ================================================================================================
    "noEmit": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // ================================================================================================
    // üöÄ PERFORMANCE
    // ================================================================================================
    "incremental": true,
    "composite": false,
    "tsBuildInfoFile": "./.tsbuildinfo",

    // ================================================================================================
    // üé® JSX & REACT
    // ================================================================================================
    "jsx": "preserve",
    "jsxImportSource": "react",

    // ================================================================================================
    // üóÇÔ∏è PATH MAPPING (Monorepo Structure)
    // ================================================================================================
    "baseUrl": ".",
    "paths": {
      // Web app paths
      "@/*": ["./apps/web/*"],
      "@/components/*": ["./apps/web/components/*"],
      "@/lib/*": ["./apps/web/lib/*"],
      "@/types/*": ["./apps/web/types/*"],
      "@/hooks/*": ["./apps/web/hooks/*"],
      "@/stores/*": ["./apps/web/stores/*"],
      "@/app/*": ["./apps/web/app/*"],

      // Shared packages
      "@spike/database": ["./packages/database/src"],
      "@spike/database/*": ["./packages/database/src/*"],
      "@spike/shared": ["./packages/shared/src"],
      "@spike/shared/*": ["./packages/shared/src/*"],
      "@spike/ui": ["./packages/ui/src"],
      "@spike/ui/*": ["./packages/ui/src/*"],

      // Type-only imports
      "@/types": ["./apps/web/types"],
      "@spike/types": ["./packages/shared/src/types"]
    },

    // ================================================================================================
    // üîå PLUGINS
    // ================================================================================================
    "plugins": [
      {
        "name": "next"
      },
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },

  // ================================================================================================
  // üìÅ INCLUDE & EXCLUDE PATTERNS
  // ================================================================================================
  "include": [
    // Next.js types
    "next-env.d.ts",
    ".next/types/**/*.ts",

    // All TypeScript files
    "**/*.ts",
    "**/*.tsx",
    "**/*.cts",
    "**/*.mts",

    // Configuration files
    "**/*.config.ts",
    "**/*.config.js",

    // Test files
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",

    // Story files
    "**/*.stories.ts",
    "**/*.stories.tsx",

    // Declaration files
    "**/*.d.ts",

    // Specific directories
    "apps/**/*",
    "packages/**/*"
  ],

  "exclude": [
    // Dependencies
    "node_modules",
    "**/node_modules",
    "**/node_modules/**",

    // Build outputs
    ".next",
    "**/.next",
    "**/.next/**",
    "out",
    "**/out",
    "**/out/**",
    "dist",
    "**/dist",
    "**/dist/**",
    "build",
    "**/build",
    "**/build/**",
    ".turbo",
    "**/.turbo",
    "**/.turbo/**",

    // Cache directories
    ".cache",
    "**/.cache",
    "**/.cache/**",

    // Test coverage
    "coverage",
    "**/coverage",
    "**/coverage/**",

    // Temporary files
    "tmp",
    "**/tmp",
    "**/tmp/**",
    "temp",
    "**/temp",
    "**/temp/**",

    // Python files (scraper service)
    "**/*.py",
    "**/__pycache__",
    "**/venv",
    "**/env",

    // Database files
    "**/*.db",
    "**/*.sqlite",

    // Logs
    "**/*.log",

    // OS files
    "**/.DS_Store",
    "**/Thumbs.db",

    // Editor files
    "**/.vscode",
    "**/.idea",

    // Deployment
    ".vercel",
    "**/.vercel",

    // Environment files
    "**/.env*"
  ],

  // ================================================================================================
  // üìä COMPILER PERFORMANCE
  // ================================================================================================
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": ["**/node_modules", "**/.next", "**/dist", "**/build", "**/.turbo"]
  },

  // ================================================================================================
  // üéì ACADEMIC PLATFORM SPECIFIC SETTINGS
  // ================================================================================================
  "compileOnSave": false,
  "references": [
    {
      "path": "./apps/web"
    },
    {
      "path": "./packages/database"
    },
    {
      "path": "./packages/shared"
    },
    {
      "path": "./packages/ui"
    }
  ]
}
