# ================================================================================================
# üéì SPIKE ACADEMIC PLATFORM - ENVIRONMENT VARIABLES TEMPLATE
# ================================================================================================
#
# SETUP INSTRUCTIONS:
# 1. Copy this file to .env.development
# 2. Replace all placeholder values with your actual credentials
# 3. Never commit .env.development to version control
# 4. Update this template when adding new environment variables
#
# SECURITY NOTE:
# - Use strong, unique secrets for all authentication tokens
# - Rotate credentials regularly
# - Use environment-specific values for different deployment stages
#
# ================================================================================================

# ================================================================================================
# üèóÔ∏è APPLICATION CONFIGURATION
# ================================================================================================

# Application Environment
NODE_ENV=development
APP_URL=http://localhost:3000
APP_PORT=3000

# Debug & Logging
DEBUG=false
LOG_LEVEL=info
NEXTAUTH_DEBUG=true

# ================================================================================================
# üóÑÔ∏è DATABASE CONFIGURATION (SUPABASE)
# ================================================================================================

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database Connection (for direct access if needed)
SUPABASE_DB_HOST=db.your-project-ref.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your_database_password_here

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# ================================================================================================
# üîê AUTHENTICATION CONFIGURATION (NEXTAUTH V5)
# ================================================================================================

# NextAuth Configuration
AUTH_SECRET=your_nextauth_secret_generate_with_openssl_rand_base64_32
AUTH_URL=http://localhost:3000
AUTH_TRUST_HOST=true

# Session Configuration
AUTH_SESSION_MAX_AGE=2592000
AUTH_SESSION_UPDATE_AGE=86400

# ================================================================================================
# üéì UNIVERSITY AUTHENTICATION
# ================================================================================================

# Google OAuth (for BGU integration)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Microsoft OAuth (for other universities)
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# GitHub OAuth (for development)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# ================================================================================================
# üè´ MOODLE INTEGRATION
# ================================================================================================

# BGU Moodle Configuration
BGU_MOODLE_BASE_URL=https://moodle2.bgu.ac.il/moodle
BGU_MOODLE_API_ENDPOINT=/webservice/rest/server.php
BGU_MOODLE_TOKEN=your_bgu_moodle_token

# Moodle Rate Limiting
MOODLE_MAX_REQUESTS_PER_MINUTE=10
MOODLE_REQUEST_DELAY_MS=3000

# Moodle User Credentials (for testing only - use OAuth in production)
MOODLE_USERNAME=your_moodle_username
MOODLE_PASSWORD=your_moodle_password

# ================================================================================================
# üìß EMAIL CONFIGURATION
# ================================================================================================

# Email Service (for notifications)
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_FROM=noreply@spike-platform.com

# Email Templates
EMAIL_TEMPLATE_WELCOME=welcome-he.html
EMAIL_TEMPLATE_ASSIGNMENT_DUE=assignment-due-he.html

# ================================================================================================
# üîÑ REDIS CONFIGURATION (CACHING & RATE LIMITING)
# ================================================================================================

# Upstash Redis (for caching and rate limiting)
UPSTASH_REDIS_REST_URL=https://your-redis-endpoint.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# Redis Configuration
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY_MS=1000

# Cache TTL Settings (in seconds)
CACHE_TTL_ASSIGNMENTS=900
CACHE_TTL_COURSES=10800
CACHE_TTL_GRADES=1800
CACHE_TTL_USER_DATA=3600

# ================================================================================================
# üìä MONITORING & ANALYTICS
# ================================================================================================

# Sentry (Error Monitoring)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=spike-platform@1.0.0

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# PostHog (User Analytics)
POSTHOG_KEY=your_posthog_key
POSTHOG_HOST=https://app.posthog.com

# ================================================================================================
# üöÄ DEPLOYMENT & CDN
# ================================================================================================

# Vercel Configuration
VERCEL_URL=your-app.vercel.app
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# Cloudflare (CDN & DNS)
CLOUDFLARE_API_TOKEN=your_cloudflare_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# ================================================================================================
# üîß DEVELOPMENT TOOLS
# ================================================================================================

# Turbo Configuration
TURBO_TOKEN=your_turbo_token
TURBO_TEAM=your_turbo_team

# Playwright Configuration
PLAYWRIGHT_LOCALE=he-IL
PLAYWRIGHT_TIMEZONE=Asia/Jerusalem

# Bundle Analyzer
ANALYZE=false

# ================================================================================================
# üé® UI/UX CONFIGURATION
# ================================================================================================

# Feature Flags
FEATURE_DARK_MODE=true
FEATURE_HEBREW_CALENDAR=true
FEATURE_REAL_TIME_NOTIFICATIONS=true
FEATURE_OFFLINE_MODE=false

# Hebrew/RTL Configuration
DEFAULT_LOCALE=he
SUPPORTED_LOCALES=he,en
RTL_ENABLED=true

# Academic Calendar
ACADEMIC_YEAR_START_MONTH=10
DEFAULT_SEMESTER=◊ê
GRADE_SCALE_MAX=100

# ================================================================================================
# üõ°Ô∏è SECURITY CONFIGURATION
# ================================================================================================

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://spike-platform.vercel.app
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Content Security Policy
CSP_REPORT_URI=https://your-csp-endpoint.com/report

# ================================================================================================
# üß™ TESTING CONFIGURATION
# ================================================================================================

# Test Database (use different Supabase project for testing)
TEST_SUPABASE_URL=https://your-test-project.supabase.co
TEST_SUPABASE_ANON_KEY=your_test_supabase_anon_key

# Test User Credentials
TEST_USER_EMAIL=test@bgu.ac.il
TEST_USER_PASSWORD=test_password_123
TEST_STUDENT_ID=123456789

# E2E Testing
E2E_BASE_URL=http://localhost:3000
E2E_HEADLESS=true
E2E_TIMEOUT=30000

# ================================================================================================
# üêç PYTHON SCRAPER CONFIGURATION
# ================================================================================================

# Python Scraper Service
SCRAPER_SERVICE_URL=http://localhost:8000
SCRAPER_API_KEY=your_scraper_api_key

# Scraper Database
SCRAPER_DB_URL=postgresql://user:password@localhost:5432/spike_scraper

# Scraper Rate Limiting
SCRAPER_MAX_CONCURRENT_REQUESTS=3
SCRAPER_DELAY_BETWEEN_REQUESTS=2000

# ================================================================================================
# üì± MOBILE & PWA CONFIGURATION
# ================================================================================================

# PWA Configuration
PWA_ENABLED=true
PWA_OFFLINE_FALLBACK=/offline

# Push Notifications
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:support@spike-platform.com

# ================================================================================================
# üìä BUSINESS INTELLIGENCE
# ================================================================================================

# Analytics Database
