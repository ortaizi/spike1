REPORT_EXPORT_FORMATS=pdf,xlsx,csv

# ================================================================================================
# üåê INTERNATIONALIZATION
# ================================================================================================

# Localization
I18N_DEFAULT_LOCALE=he
I18N_FALLBACK_LOCALE=en
I18N_DETECTION_ORDER=path,cookie,header

# Translation Services
